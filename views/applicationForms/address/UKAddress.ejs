<% if(address_type == 'main') {
    pageTitle = "Return address details - Get a document legalised – GOV.UK"
}else{
    pageTitle = "Return address if we can’t legalise your documents - Get a document legalised – GOV.UK"
}

//if(!user_address.submitted){skip_override= { link: 'address-details-group', message: 'Skip to main'}}

var primaryAddressErrors = [];
if (error_report) {
    if (error_report[0][0].errMsgs) {
        error_report[0][0].errMsgs.forEach(
                function(error){
                    if (error.fieldName == "full_name") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "postcode") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "house_name") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "street") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "town") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "county") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "telephone") {
                        primaryAddressErrors.push(error);
                    }
                    if (error.fieldName == "email") {
                        primaryAddressErrors.push(error);
                    }

                }
        )
    }

}%>
<div class="inner_header <%if (!user_data.loggedIn){%>no-user-signed-in<%}%>" >
    <%
    var url = '/your-'+address_type+'-address-details';
    %>
    <a href="<%= url %>" class="back-to-previous">Back</a>

    <%if (user_data.loggedIn) { %><%- partial ('../../partials/inner-header.ejs')%><%}%>

</div>


<h1 class="heading-xlarge"><%= address_type == 'main' ? 'Return address details' : 'Return address if we can’t legalise your documents' %></h1>
<div id="sr-notification-container" class="visually-hidden " aria-live="assertive" aria-atomic="true"></div>

<div class="form-group column-two-thirds" style="float: none">
    <div class="error-summary hide" id="postcode-error" role="group" tabindex="-1"></div>
    <form id="find-address-form"  method="post" action="<%= '/find-your-'+address_type+'-address'%>">
        <label class="form-label-bold" for="find-postcode" style="padding-bottom: 12px;">Enter postcode</label>
        <input class="form-control postcode" id="find-postcode" type="text" aria-required="true"
               value="<%if(form_values[0]){%><%= form_values[0].postcode%><%} else if (form_values) { %><%= form_values.postcode %><% } %>"
               name="find-postcode">
        <button class="button find-address button-secondary" type="submit" id="find-address">Find UK address</button>
    </form>
    <a class="link address-manual" id="address-manual" href="<%= '/your-'+address_type+'-address-manual' %>" >Enter address manually</a>

    <form id="select-address-form"  method="post" action="<%= '/select-your-'+address_type+'-address'%>">
        <input type="hidden" name="full_name" value="<%if(user_address.address.full_name != null){%><%= user_address.address.full_name %><%}%>">
        <input type="hidden" name="postcode" value="<%if(form_values[0]){%><%= form_values[0].postcode%><%} else if (form_values) { %><%= form_values.postcode %><% } %>">
        <div class="<%if(addresses.length==0 || addresses==false){%>hide<%}%>" id="address-list-group">
            <label class="form-label visuallyhidden" for="address-list-box">Pick an address</label>
            <select class="form-control"  aria-required="true" id="address-list-box" name="address" form="select-address-form"
                    onchange="document.getElementById('select-address-form').submit();">
                <option disabled selected>Pick an address</option>
                <%for(var a=0; a<addresses.length; a++){%>
                <option value=<%= a%> <%if(form_values.house_name == addresses[a].house_name || (!form_values.house_name &&form_values.organisation == addresses[a].organisation)){%>selected<%}%> ><%= addresses[a].option %></option>
                <%}%>
            </select>
            <button class="button find-address button-secondary js-hidden <%if(addresses.length==0){%>hide<%}%>" type="submit" id="select-address">Select Address</button>

        </div>


    </form>
</div>
<form id="address_form" method="post" action="/add-uk-address" class="column-two-thirds">
<div class=" error-summary  <% if (error_report) { %>show<% } else { %>hide<% } %>" role="group"    tabindex="-1">

    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
        Please check the form
    </h2>

    <div id="all-errors">
         <ul class="error-summary-list nopadding">
            <% if (error_report) {  %>
            <% error_report[0][0].errMsgs.forEach( function(errorMsgs) { %>
            <li><a href="#legend_<%= errorMsgs.questionId %>"><%= errorMsgs.fieldSolution %></a></li>
            <% }) %>
            <% } %>
        </ul>
    </div>
</div>

    <div class="form-group" id="address-details-group">

        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('full_name')>-1) { %>error<% } %>" id="legend_full_name">
            <label class="form-label-bold" for="full-name">Full name</label>
            <span class="form-hint">Name of the person you would like the documents returned to</span>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('full_name')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "full_name") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control" id="full-name"  type="text" name="full_name" aria-required="true" value="<%if(form_values[0]){%><%= form_values[0].full_name%><%} else if (form_values) { %><%= form_values.full_name %><% } %>">

        </div>
        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('organisation')>-1) { %>error<% } %>" id="legend_organisation">
            <label class="form-label-bold" for="organisation">Company or organisation (optional)</label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('organisation')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "organisation") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control" id="organisation" type="text" name="organisation" aria-required="true" value="<%if(form_values[0]){%><%= form_values[0].organisation%><%} else if (form_values) { %><%= form_values.organisation %><% } %>" >
        </div>


        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('house_name')>-1) { %>error<% } %>" id="legend_house_name">
            <label class="form-label-bold" for="house_name">House name or number</label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('house_name')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "house_name") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control" id="house_name" type="text" name="house_name" aria-required="true" value="<%if(form_values && form_values.house_name && form_values.house_name != 'N/A') { %><%= form_values.house_name %><% } %>" >
        </div>

        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('street')>-1) { %>error<% } %>" id="legend_street">
            <label class="form-label-bold" for="street">Street</label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('street')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "street") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control" type="text" id="street" name="street" aria-required="true" value="<%if(form_values[0]){%><%= form_values[0].street%><%} else if (form_values) { %><%= form_values.street %><% } %>" >
        </div>

        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('town')>-1) { %>error<% } %>" id="legend_town">
            <label class="form-label-bold" for="town">Town</label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('town')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "town") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>
            <input class="form-control" type="text" id="town" name="town" aria-required="true" value="<%if(form_values[0]){%><%= form_values[0].town%><%} else if (form_values) { %><%= form_values.town %><% } %>" >
        </div>

        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('county')>-1) { %>error<% } %>" id="legend_county">
            <label class="form-label-bold" for="county">County <span>(optional)</span></label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('county')>-1) { %>show<% } else { %>hide<% } %>">
                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "county") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control" type="text" id="county" name="county" value="<%if(form_values[0]){%><%= form_values[0].county%><%} else if (form_values) { %><%= form_values.county %><% } %>">
        </div>

        <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('postcode')>-1) { %>error<% } %>" id="legend_postcode">
            <label class="form-label-bold" for="postcode">Postcode</label>
            <legend
                    class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('postcode')>-1) { %>show<% } else { %>hide<% } %>">

                    <span class="error-message">
                        <% if (error_report && primaryAddressErrors.length>0) { %>
                        <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "postcode") { %>
                        <%= errorItem.fieldSolution %>
                        <% } %>
                        <% }) %>
                        <% } %>
                    </span>
            </legend>

            <input class="form-control form-control-1-4 postcode" id="postcode" name="postcode" type="text" aria-required="true" value="<%if(form_values[0]){%><%= form_values[0].postcode%><%} else if (form_values) { %><%= form_values.postcode %><% } %>" >
        </div>

      <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('telephone')>-1) { %>error<% } %>" id="legend_telephone">
        <label class="form-label-bold" for="telephone">Telephone number</label>
        <span class="form-hint">Contact number for this address for delivery questions or updates</span>
        <legend
          class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('telephone')>-1) { %>show<% } else { %>hide<% } %>">

                    <span class="error-message">
                      <% if (error_report && primaryAddressErrors.length>0) { %>
                      <% primaryAddressErrors.forEach( function(errorItem) { %>
                      <% if (errorItem.questionId == "telephone") { %>
                      <%= errorItem.fieldSolution %>
                      <% } %>
                      <% }) %>
                      <% } %>
                    </span>
        </legend>

        <input class="form-control" type="tel" id="telephone" name="telephone" value="<%if(form_values[0]){%><%= form_values[0].telephone%><%} else if (form_values) { %><%= form_values.telephone %><% } else if (contact_telpehone) { %><%= contact_telephone %><% } %>">
      </div>

      <div class="form-group  <% if (error_report && error_report[1][0].erroneousFields.indexOf('email')>-1) { %>error<% } %>" id="legend_email">
        <label class="form-label-bold" for="email">Email address <span>(optional)</span></label>
        <span class="form-hint">Contact email for this address for delivery questions or updates</span>
        <legend
          class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('email')>-1) { %>show<% } else { %>hide<% } %>">

                    <span class="error-message">
                      <% if (error_report && primaryAddressErrors.length>0) { %>
                      <% primaryAddressErrors.forEach( function(errorItem) { %>
                      <% if (errorItem.questionId == "email") { %>
                      <%= errorItem.fieldSolution %>
                      <% } %>
                      <% }) %>
                      <% } %>
                    </span>
        </legend>

        <input class="form-control" type="text" id="email" name="email" value="<%if(form_values[0]){%><%= form_values[0].email || ''%><%} else if (form_values) { %><%= form_values.email || ''%><% } else if (contact_email) { %><%= contact_email %><% } %>">
      </div>

        <input type="hidden" name="country" value="United Kingdom">
        <input type="hidden" name="manual" value=false>
        <input type="hidden" name="address_type" value="<%= address_type%>">
    </div>

    <div class="form-group">
        <button id="NextBtn" class="button"><%if(summary){ %>Save and return to summary<% }else{%>Continue<%} %></button>
    </div>


</form>


