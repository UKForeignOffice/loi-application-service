<% pageTitle="Check your answers before submitting your application - Get a document legalised â€“ GOV.UK" %>

<div class="inner_header <% if (!user_data.loggedIn){ %>no-user-signed-in<% } %>">
    <a href="/additional-reference" class="back-to-previous govuk-link">Back</a>
    <%- partial('../partials/inner-header')%>
</div>

<h1 class="heading-xlarge">Check your answers before submitting your application</h1>

<div class="column-two-thirds">

    <h2 class="heading-medium govuk-!-margin-top-2">Uploaded PDF files</h2>
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                <ul class="govuk-list govuk-!-margin-bottom-0 govuk-list--spaced <% if (documentNames.length > 1) { %>govuk-list--bullet<% } %>">
                    <% for(documentName of documentNames) { %>
                        <li><%= documentName %></li>
                    <% } %>
                </ul>
            </dt>
            <dd class="govuk-summary-list__actions">
                <a class="govuk-link" href="/upload-files">
                    Change<span class="govuk-visually-hidden"> files</span>
                </a>
            </dd>
        </div>
    </dl>


    <h2 class="heading-medium govuk-!-margin-top-2">Reference</h2>
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Your reference
            </dt>
            <dd class="govuk-summary-list__value">
                <% if (userRef) { %>
                    <%= userRef %>
                <% } else {%>
                    No reference entered
                <% } %>
            </dd>
            <dd class="govuk-summary-list__actions">
                <a class="govuk-link" href="/additional-reference">
                    Change<span class="govuk-visually-hidden"> reference</span>
                </a>
            </dd>
        </div>
    </dl>

    <h2 class="heading-medium govuk-!-margin-top-2">Cost</h2>
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Total cost
                <p>for <%= totalDocuments %> uploaded PDFs</p>
            </dt>
            <dd class="govuk-summary-list__value">
                <%= totalCost %>
            </dd>
        </div>
    </dl>

    <form action="/add-docs-to-db-handler" method="post" novalidate>

        <input type="hidden" name="answers-checked" value="true">

        <button class="govuk-button" data-module="govuk-button">
            Continue
        </button>

    </form>
</div>
